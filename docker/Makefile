#===============================================================================

#===============================================================================
#   BUILD
#===============================================================================
b:
	docker-compose build django-wp postgres mongo node

b-django:
	docker-compose build django-wp

#===============================================================================
#   UP
#===============================================================================
u:
	docker-compose up -d django-wp postgres mongo node

u-node:
	docker-compose up -d node

#===============================================================================
#  DOWN
#===============================================================================
d:
	docker-compose down

#===============================================================================
#  NEW PROJECT
#===============================================================================

#===============================================================================
#   SHELLS
#===============================================================================
s-django:
	docker-compose exec django-wp bash

s-node:
	docker-compose exec node bash

#===============================================================================
#   RESTART
#===============================================================================
r-django:
	docker-compose restart django-wp

#===============================================================================
#   GLOBAL
#===============================================================================
g-remove-all:
	docker stop $(docker ps -a -q)

g-stop-all:
	docker rm $(docker ps -a -q)

#===============================================================================
#   NEW
#===============================================================================
n-project:
	docker-compose exec django-wp django-admin.py startproject config /home/docker/code/app/
